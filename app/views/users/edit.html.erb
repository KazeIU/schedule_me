<h1>here is the new edting page</h1>
<div class="edit_page">
  <div class="col-xs-12 col-sm-4 col-sm-offset-4 col-md-4 col-md-offset-4">
    <div class="form">
    <h2>Edit</h2>

    <%= simple_form_for @user do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
              <%= f.input :email, required: true, autofocus: true %>
        <%= f.input :photo%>
        <%= f.input :photo_cache, as: :hidden %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Update" %>
      </div>
    <% end %>

    <h3>Cancel my account</h3>

    <p>Unhappy? <%= link_to "Cancel my account", cancel_user_registration_path(current_user), data: { confirm: "Are you sure?" }, method: :delete %></p>

    <%= link_to "Back", :back %>
    </div>
  </div>
</div>

