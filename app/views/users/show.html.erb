<div class="profile">
  <div class="col-xs-12 col-sm-8 col-sm-offset-2">
    <div class="user-imformation text-center">
      <div class="profile-photo-flame">
        <% if @user.photo.blank?%>
          <%= image_tag "user.svg", class: "profile-photo"%>
        <% else %>
          <%= cl_image_tag @user.photo, crop: :fill, class: "profile-photo"%>
        <% end %>
        <%= simple_form_for @user do |f| %>
          <%= f.error_notification %>
          <%= f.input :photo%>
          <%= f.input :photo_cache, as: :hidden %>
        <div class="form-actions">
          <%= f.button :submit, "save", class: 'btn btn-warning'  %>
        </div>
        <% end %>
      </div>
      <div class="user-details">
        <h3><%= @user.first_name %>  <%= @user.last_name %></h3>
        <p><%= @user.email %></p>
      </div>
    </div>
  </div>
  <div class="col-xs-12 col-sm-4 col-sm-offset-4">
    <div class="user-dials text-center">
      <p><%= link_to "delete my account", cancel_user_registration_path(current_user), data: { confirm: "Are you sure?" }, method: :delete %></p>
      </div>
    </div>
  </div>
</div>
