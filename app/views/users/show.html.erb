<div class="user-show">
  <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-sm-offset-3">
    <div class="information-box">

      <div class="cover">
        <div class="show-information">
          <% if @user.photo.blank?%>
            <%= image_tag "user.svg"%>
          <% else %>
            <%= cl_image_tag @user.photo, crop: :fill, width: "120" %>
          <% end %>
        </div>
      </div>
      <div class="main">
        <h1><%= @user.first_name %>  <%= @user.last_name %></h1>
        <h6><%= @user.email %></h6>
          <ul class= "text-center">
          <% if current_user == @user %>
            <li class="change-photo">
              <%= simple_form_for @user do |f| %>
                <%= f.error_notification %>
                <%= f.input :photo, label: false%>
                <%= f.input :photo_cache, as: :hidden, style: "form-center" %>
                <%= f.button :submit, "save", class: 'btn btn-warning'  %>
              <% end %>
            </li>
            <li class="delete-botton">
              <%= link_to "delete the account", cancel_user_registration_path(current_user), data: { confirm: "Are you sure?" }, method: :delete %>
            </li>
          <% end %>
          </ul>
        </div>
        <div class="social">
      </div>
    </div>
  </div>
</div>

