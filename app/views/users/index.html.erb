<div class="teachers-index">
  <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
    <div class="student-list">
      <div class="student-list-title text-center">
        <h1>Teachers list</h1>
      </div>
<!-- nozomi wants someone to make this search bar -->
      <div class="list-function">
        <ul class="list-inline">
          <li class="searchbar form-inline">
              <%= form_tag users_path, method: :get do %>
              <%= text_field_tag :query, params[:query], size: 30, class: "form-control", placeholder: "out of order"%>
              <%= button_tag "Search", type: "submit", class: "btn btn-primary" %>
              <% end %>
          </li>
        </ul>
      </div>
      <div class="display-list">
        <div class="listed-students">
          <% @users.each do |user| %>
            <ul class = "list-inline">
              <li>
                <% if user.photo.blank?%>
                  <%= image_tag "user.svg", class: "teachers-photos" %>
                <% else %>
                  <%= cl_image_tag user.photo, crop: :fill, class: "teachers-photos"%>
                <% end %>
              </li>
              <li>
                <%= link_to user_path(user) do %>
                  <%= user.first_name %> <%= user.last_name %>
                <% end %>
              </li>
            </ul>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>




