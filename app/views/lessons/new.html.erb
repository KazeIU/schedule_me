<h1>Create Lessons</h1>

<div class="container">
  <div class="row">
    <div class="col-xs-4 col-xs-offset-4">
      <%= simple_form_for(@lesson) do |form| %>

      <%= simple_form_for :lesson, method: "get" do |f| %>
        <%= f.input :start_time, as: :string, required: false, input_html: {class: "datepicker"} %>
        <%= form.association :course, collection: Course.order('level'), label_method: :course_name,  prompt: "Choose a course" %>
        <%= form.association :room, collection: Room.order('name'), label_method: :name,  prompt: "Choose a room" %>
        <%= form.association :user, collection: User.order('first_name'), label_method: :first_name,  prompt: "Choose a Teacher" %>
        <%= form.button :submit %>
          <% end %>
      <% end %>
    </div>
  </div>
</div>
