<h1>Lessons#index</h1>
<p>Find me in app/views/lessons/index.html.erb</p>

<%= calendar number_of_days: 3, events: @lessons do |date, lessons| %>
  <span class="date-str"><%= date %></span>

<% @rooms.each do |room| %>
    <div>
      <%= room.name %>
    <% lessons.each do |lesson| %>
      <div style="background-color">
        <p>room: <%= lesson.room.name %></p>
        <%= lesson.start_time.strftime('%H') %> <%= lesson.start_time.strftime('%M') %>
        <%= lesson.course.language %>
        <%= lesson.course.level %>
    <% end %>
  </div>
  <% end %>
<% end %>




