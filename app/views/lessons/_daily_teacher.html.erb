<div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-sm-offset-3">
<%= calendar number_of_days:1, events: @lessons do |date, lessons| %>
<table>
<span class="date-str"><%= date %></span>
  <% vacant_cell = true %>
  <% (10..20).each do |h|%>
    <% lessons.each do |lesson| %>
      <% if h==lesson.start_time.strftime('%H').to_i %>
        <% vacant_cell = false %>
        <tr>
          <td><div class = "lesson-hour"><%= h %></div></td>
          <td>
          <%= link_to lesson_path(lesson) do %>
          <div class = "lesson-card level-<%= lesson.course.level.downcase %>">
            Room: <%= lesson.room.name %>
            <%= lesson.course.level %>
          </div>
          <% end %>
        </td></tr>
      <% end %>
    <% end %>
  <% if vacant_cell %>
    <tr>
      <td><div class = "lesson-hour"><%= h %></div></td>
      <td>
          <div class = "lesson-card-vacant">XXXXXXXXXXXXXXXXXX</div>
        <% end %>
      </td>
    </tr>
    <% vacant_cell = true %>
  <% end %>
</table>
<% end %>
</div>
