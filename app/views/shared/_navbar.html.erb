<div class="navbar-wagon <%= yield(:navbar_class) %>">
  <!-- Logo -->
  <% if user_signed_in? %>
    <%= link_to lessons_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "newlogo.png", height: 60 %>
    <% end %>
  <% else %>
    <%= link_to root_path, class: "navbar-wagon-brand" do %>
      <%= image_tag "newlogo.png", height: 60 %>
    <% end %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <% if user_signed_in? %>

      <!-- Links when logged in -->
      <%= link_to "See Students", students_path, class: "navbar-wagon-item navbar-wagon-link" %>

      <!-- Avatar with dropdown menu -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <% if current_user.photo.blank? %>
            <%= image_tag "user.svg", class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <% else %>
            <%= cl_image_tag current_user.photo, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <% end %>

          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to user_path(current_user) do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
      <!-- Login link (when logged out) -->
    <div class="form-inputs form-signin navbar-form">
      <%= form_for(:user, :url => session_path(:user)) do |f| %>
        <%= f.text_field :email,
          class: "form-control",
          placeholder: "scheduleme@gmail.com"%>
        <%= f.check_box :remember_me%>
        <%= f.label :remember_me %>
        <%= f.password_field :password,
          class: "form-control",
          placeholder: "••••••"%>
        <%= link_to "Forgot your password?", new_password_path(:user) %>
        <span><%= f.submit 'Login', class: 'btn btn-primary'%></span>
      <% end %>
    </div>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <%= link_to "Students", students_path %>
        <li><a href="#">Other one</a></li>
        <li><a href="#">Other one</a></li>
      </ul>
    </div>
  </div>
</div>


