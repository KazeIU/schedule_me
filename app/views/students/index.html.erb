<h1>------Students list------</h1>

<%= link_to "Create a new student", new_student_path  %>
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6">
      <div class="form-inline">
        <%= form_tag students_path, method: :get do %>
        <%= text_field_tag :query, params[:query], size: 30, class: "form-control", placeholder: "Search by name"%>
        <%= button_tag "Search", type: "submit", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-12, col-sm-6">
      <% @students.each do |student| %>
      <ul>
        <li><%= link_to student.name, student_path(student) %></li>
      </ul>
      <% end %>
    </div>
  </div>
</div>


